<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Trends_LitterMeUp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_gray</item>

        <item name="colorPrimaryVariant">@color/green_1</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="colorOnSecondary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorHint">@color/black</item>

    </style>








    <style name="NavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@color/main_green</item>
        <item name="itemTextColor">@color/main_green</item>
        <item name="android:textColorPrimary">@color/main_green</item>
    </style>

    <style name="Theme.Trends_LitterMeUp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Trends_LitterMeUp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Trends_LitterMeUp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>